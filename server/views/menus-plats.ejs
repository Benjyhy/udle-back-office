    <script src="js/webflow.js" type="text/javascript"></script>
    <script>
      window.addEventListener("DOMContentLoaded", e => {
        let fileUrl = "";

        document.getElementById("articlePhoto").addEventListener("change", async (e) => {
          const file = e.target.files[0];
          const storageRef = firebase.storage().ref();
          const fileRef = storageRef.child(file.name);
          await fileRef.put(file);
          fileUrl = await fileRef.getDownloadURL();
        });

        document.getElementById("overlay").addEventListener("click", (e) => {
          e.target.classList.remove("active");
        });

        const ALTER_ARTICLE = document.getElementById("article-form");

        ALTER_ARTICLE.addEventListener("submit", e => {
          e.preventDefault();
          if (currentArticleId != undefined) {
            db.collection("restaurants").where("id", "==", restauIds[0]).get().then((snapshot) => {
              snapshot.docs.forEach(doc => {
                firestoreDoc[0].forEach(item => {
                  if (item.id == currentArticleId) {
                    item.price = Number(document.getElementById("articlePrice").value);
                    item.title = document.getElementById("articleName").value;
                    item.img = fileUrl == "" ? currentArticleImg : fileUrl;
                  }
                });
                doc.ref.update({ meals: firestoreDoc[0] }, { merge: true });
              });
            });
          } else {
            db.collection("restaurants").where("id", "==", restauIds[0]).get().then((snapshot) => {
              snapshot.docs.forEach(doc => {
                let newMeal = {
                  title: document.getElementById("articleName").value, price: Number(document.getElementById("articlePrice").value), img: fileUrl, id: `${Math.random().toString(36).substr(2, 9)}-${Math.random().toString(36).substr(2, 9)}-${Math.random().toString(36).substr(2, 9)}`
                }
                firestoreDoc[0].push(newMeal);
                doc.ref.update({ meals: firestoreDoc[0] }, { merge: true });
              });
            });
          }
          document.location.reload();
        });
      });

    </script>
