      db.collection('restaurants').where('id', '==', restauIds[0]).get().then(snapshot => {
        snapshot.docs.forEach(doc => {
          firestoreDoc.push(doc.data().meals);
          doc.data().meals.forEach(meal => {
            document.getElementById('allArticles').innerHTML += `
            <div class="wrapper__menu-card"><img src="${meal.img}" loading="lazy"
